generator client {
  provider      = "prisma-client-js"
  binaryTargets = ["native", "linux-musl-arm64-openssl-3.0.x"]
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model users {
  id       Int       @id @default(autoincrement())
  name     String
  email    String   @unique
  password String
  role     String    @default("user")
  creation DateTime @default(now())
}

model projects {
  id      Int       @id @default(autoincrement())
  name    String
  workers  String[]
  tasks    Json[]
}